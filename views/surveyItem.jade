extends layout.jade

block content
	div.container(style='text-align: center;background-color: #add8e6; border: 3px solid #D1D1D1')
		div#example-grid
			div.row
				div.four.columns 
					b profile_owner_id :
				div.eight.columns
					=item.profile_owner_id
			div.row
				div.six.columns
					img(src=item.image_url)
				div.six.columns
					div.row
						div.five.columns
							b Likes:
						div.seven.columns
							=item.likes
					div.row
						div.five.columns
							b caption_time:
						div.seven.columns
							=item.caption_time
					div.row
						div.five.columns
							b owner_caption:
						div.seven.columns
							=item.owner_caption
			div.row
				div.nine.columns
					p Is there any cyberaggressive behavior in the online posts? Mark yes if there is at least one negative word/comment and or content with intent to harm someone or others?
				div.three.columns
					b Yes  No
			div.row
				div.nine.columns
					p Is there any cyerbullying in the online post? Mark yes if there are negative words and or comment with intent to harm someone or other, and the posts include two or more repeated negativity against a victim that cannot easily defend him or herself?
				div.three.columns
					b Yes  No
			div.row
				a.button(href='/survey/next/'+ item.profile_owner_id) Next 
